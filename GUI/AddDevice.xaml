<Window x:Class="GUI.AddDevice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="AddDevice" Height="450" Width="800">
    <Grid>
        <ComboBox Name="Type"  Text="{Binding Type , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Margin="0,137,55,0" Height="30"  Width="120"  HorizontalAlignment="Right"  VerticalAlignment="Top" />
        <TextBox Name="rangeInput"  Margin="0,44,55,0" Width="120" Height="17" HorizontalAlignment="Right"  VerticalAlignment="Top"/>
        <TextBox Name="fieldOfViewInput" Margin="0,92,55,0" Width="120"  Height="17" HorizontalAlignment="Right"  VerticalAlignment="Top"/>
        <Label Content="range:" HorizontalAlignment="Left" Margin="432,27,0,0" VerticalAlignment="Top" Width="170" Height="34"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="432,134,0,0" VerticalAlignment="Top" Width="170" Height="34"/>
        <Label Content="field of vision:" HorizontalAlignment="Left" Margin="423,84,0,0" VerticalAlignment="Top" Width="170" Height="34"/>
        <Button Content="Add" Margin="423,195,55,195" Click="AddDeviceToModel"/>

    </Grid>
</Window>
